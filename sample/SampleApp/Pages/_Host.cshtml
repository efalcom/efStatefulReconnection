@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SampleApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="SampleApp.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js" autostart="false"></script>
    
    @* CA: El siguiente script se agrega para poder iniciar manualmente el servidor Blazor con parámetros personalizados.
           Notar que para que esto funcione, se debe indicar el parámetro "autostart=false" en el script blazor.server.js, mas arriba.
    *@
    <script>
        Blazor.start({
            reconnectionOptions: {
                maxRetries: 60 * 60 * 24, // 86400 seconds = 24 hours
                retryIntervalMilliseconds: 1000
            }
        });
    </script>
</body>
</html>
